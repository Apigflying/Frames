/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  animation:ff 3s infinite ease-in-out;
}
@keyframes ff{
  from{
    transform:rotate(0deg);
  }
  to{
    transfrorm:rotate(360deg);
  }
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}